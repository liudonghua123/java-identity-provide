                <constructor-arg index="1">
                    <bean class="java.time.Duration" factory-method="parse" c:_0="PT8H" />
                </constructor-arg>
            </bean>
        </entry>
        <entry key="warn-two">
            <bean parent="shibboleth.Pair">
                <constructor-arg index="0">
                    <bean parent="shibboleth.Conditions.TRUE" />
